{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "CommonJS",
    "types": [
      "node",
      "@wdio/globals/types",
      "expect-webdriverio",
      "@wdio/cucumber-framework",
      "@wdio/appium-service"
    ],
    "target": "es2022",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src",
    "**/*.d.ts"
  ],
  "excludeFiles": [
    "./src/**/*.ts",
    "node_modules/**/*.ts"
  ]
}